# ============================================================================
# DIGITALSHOP BACKEND CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!
# ============================================================================

# Server Configuration
NODE_ENV=development
PORT=8340
HOST=0.0.0.0

# Database Configuration
# IMPORTANT: Replace with your actual credentials. NEVER use default passwords in production.
DATABASE_URL=postgresql://postgres:YOUR_DB_PASSWORD@localhost:5432/digitalshop

# JWT Authentication
# CRITICAL: Generate a strong random secret (min 32 chars). Server will NOT start without this.
# Example: openssl rand -base64 48
JWT_SECRET=
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=
REFRESH_TOKEN_EXPIRES_IN=7d

# CORS Configuration
# For production, replace with your actual domain(s)
FRONTEND_URL=http://localhost:5030
ALLOWED_ORIGINS=http://localhost:5030,http://localhost:5173

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Email Configuration (Optional - for reports)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@digitalshop.com

# Tax Configuration
DEFAULT_TAX_RATE=0.06

# Application Settings
COMPANY_NAME=DigitalShop
COMPANY_ADDRESS=Your Company Address
COMPANY_PHONE=+256-XXX-XXXXXX
COMPANY_EMAIL=info@digitalshop.com
CURRENCY=UGX
CURRENCY_SYMBOL=UGX
